{
  "manifest_version": 3,
  "name": "Glorify Agresso (Autosave)",
  "version": "0.4.0",
  "description": "Adds layout tweaks to Agresso and introduces inline autosave feedback.",
  "icons": {
    "48": "icons/48.png"
  },
  "permissions": ["activeTab"],
  "host_permissions": ["https://agresso.advania.se/*"],
  "content_scripts": [
    {
      "css": ["styles.css"],
      "js": ["cells.js"],
      "matches": ["https://agresso.advania.se/*"],
      "all_frames": true
    }
  ]
}
